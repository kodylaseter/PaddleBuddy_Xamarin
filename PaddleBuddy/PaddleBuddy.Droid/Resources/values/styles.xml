<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:windowTranslucentStatus">true</item>

        <!--maybe include for transitions?-->
        <!--<item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>+
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>-->
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="VerticalLayoutDivider">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="textSmallWhite" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/almostWhite</item>
    </style>
    <style name="textMediumWhite" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/almostWhite</item>
    </style>
    <style name="textLargeWhite" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/almostWhite</item>
    </style>
    <style name="textLargeGray" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="textMediumGray" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>