<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SecondaryButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="VerticalLayoutDivider">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="horizontalLayoutDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="loginRegisterHorizontalLayoutDivider" parent="horizontalLayoutDivider">
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>

    <style name="textSmallWhite" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/almostWhite</item>
    </style>
    <style name="textMediumWhite" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/almostWhite</item>
    </style>
    <style name="textLargeWhite" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/almostWhite</item>
    </style>
    <style name="textLargeGray" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="textMediumGray" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="textSmallGray" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>